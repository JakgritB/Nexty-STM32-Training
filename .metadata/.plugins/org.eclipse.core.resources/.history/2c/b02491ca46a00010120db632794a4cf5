#include <stdint.h>
#define STM32F411xE
#include "stm32f4xx.h"

// ============================================
// Joystick Test Program
// VRx = PC0, VRy = PC1, SW = PB0
// ============================================

volatile uint16_t adc_x = 0;
volatile uint16_t adc_y = 0;
volatile uint8_t sw_state = 0;
volatile uint16_t counter = 0;

// อ่าน ADC Channel
uint16_t read_adc(uint8_t channel) {
    ADC1->SQR3 = channel;
    ADC1->CR2 |= ADC_CR2_SWSTART;
    while (!(ADC1->SR & ADC_SR_EOC));
    return ADC1->DR;
}

// ส่งข้อความ UART
void uart_send_string(const char *str) {
    while (*str) {
        while (!(USART2->SR & USART_SR_TXE));
        USART2->DR = *str++;
    }
}

// แปลงตัวเลขเป็นข้อความ
void uart_send_number(uint16_t num) {
    char buffer[6];
    int idx = 0;

    if (num == 0) {
        buffer[idx++] = '0';
    } else {
        // แปลงเลข
        int temp = num;
        int digits = 0;
        while (temp > 0) {
            temp /= 10;
            digits++;
        }

        for (int i = digits - 1; i >= 0; i--) {
            buffer[i] = '0' + (num % 10);
            num /= 10;
        }
        idx = digits;
    }

    buffer[idx] = '\0';
    uart_send_string(buffer);
}

// แสดงตำแหน่ง Joystick
void display_joystick_position(uint16_t y_val) {
    if (y_val < 1000) {
        uart_send_string(" [UP]");
    } else if (y_val > 3000) {
        uart_send_string(" [DOWN]");
    } else if (y_val >= 1500 && y_val <= 2500) {
        uart_send_string(" [CENTER]");
    } else {
        uart_send_string(" [TRANSITION]");
    }
}

// Timer Interrupt (10Hz = ทุก 0.1 วินาที)
void TIM2_IRQHandler(void) {
    if (TIM2->SR & TIM_SR_UIF) {
        TIM2->SR &= ~TIM_SR_UIF;

        counter++;
        if (counter >= 10) {  // ทุก 1 วินาที
            counter = 0;

            // อ่านค่า ADC
            // อ่านค่า ADC
            adc_x = read_adc(0);  // PA0 = ADC Channel 0
            adc_y = 0;  // ไม่ใช้  // PC1 = ADC Channel 11

            // อ่านปุ่ม SW (Active Low)
            if ((GPIOB->IDR & GPIO_IDR_ID0) == 0) {
                sw_state = 1;
            } else {
                sw_state = 0;
            }

            // แสดงผลทาง UART
            uart_send_string("X: ");
            uart_send_number(adc_x);
            uart_send_string("  Y: ");
            uart_send_number(adc_y);
            uart_send_string("  SW: ");
            uart_send_number(sw_state);
            display_joystick_position(adc_y);
            uart_send_string("\r\n");
        }
    }
}

int main(void) {
    // เปิด Clock
    RCC->AHB1ENR |= RCC_AHB1ENR_GPIOAEN | RCC_AHB1ENR_GPIOBEN | RCC_AHB1ENR_GPIOCEN;
    RCC->APB1ENR |= RCC_APB1ENR_USART2EN | RCC_APB1ENR_TIM2EN;
    RCC->APB2ENR |= RCC_APB2ENR_ADC1EN;

    // ตั้งค่า GPIO Analog (VRx=PC0, VRy=PC1)
    GPIOA->MODER |= (0b11 << GPIO_MODER_MODER0_Pos);  // PA0
    GPIOC->MODER |= (0b11 << GPIO_MODER_MODER0_Pos);  // PC0
    GPIOC->MODER |= (0b11 << GPIO_MODER_MODER1_Pos);  // PC1

    // ตั้งค่า GPIO Input (SW=PB0)
    GPIOB->MODER &= ~GPIO_MODER_MODER0;
    GPIOB->PUPDR |= (0b01 << GPIO_PUPDR_PUPD0_Pos);  // Pull-up

    // ตั้งค่า UART (PA2=TX, PA3=RX)
    GPIOA->MODER |= (0b10 << GPIO_MODER_MODER2_Pos) | (0b10 << GPIO_MODER_MODER3_Pos);
    GPIOA->AFR[0] |= (0b0111 << GPIO_AFRL_AFSEL2_Pos) | (0b0111 << GPIO_AFRL_AFSEL3_Pos);
    USART2->BRR = 139;  // 115200 baud @ 16MHz
    USART2->CR1 = USART_CR1_UE | USART_CR1_TE | USART_CR1_RE;

    // ตั้งค่า ADC
    ADC1->CR2 |= ADC_CR2_ADON;
    ADC1->SQR1 = 0;
    ADC1->SMPR2 |= (4 << ADC_SMPR2_SMP0_Pos);  // Sampling time
    ADC1->SMPR1 |= (4 << ADC_SMPR1_SMP10_Pos) | (4 << ADC_SMPR1_SMP11_Pos);
    ADC1->SMPR2 |= (4 << ADC_SMPR2_SMP0_Pos);  // Channel 0 = PA0

    // ตั้งค่า Timer 2 (10Hz)
    TIM2->PSC = 16000 - 1;   // 16MHz / 16000 = 1kHz
    TIM2->ARR = 100 - 1;     // 1kHz / 100 = 10Hz
    TIM2->DIER |= TIM_DIER_UIE;
    TIM2->CR1 |= TIM_CR1_CEN;

    // เปิด Interrupts
    NVIC_EnableIRQ(TIM2_IRQn);
    __enable_irq();

    uart_send_string("=== Joystick Test (HW-504) ===\r\n");
    uart_send_string("=== PA0 ADC Test ===\r\n");
    uart_send_string("Testing PA0 (ADC Channel 0)\r\n");
    uart_send_string("Reading every 1 second...\r\n\r\n");

    while (1) {
        // Loop หลักไม่ทำอะไร
    }
}
